
@model WebASPPetProj.Models.PostCreate

@{
    ViewBag.Title = "Create post";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container" style="padding-top:20px">
        <div class="row">

            <div class="form-group col-lg-8 col-md-8">
                <label for="TitleBox">Title:</label>
                @Html.TextBoxFor(m => m.Title, new { @id = "TitleBox", @class = "form-control new-textarea", })
            </div>

            <div class="form-group col-lg-8 col-md-8">
                <label for="MainText">Main text:</label>
                @Html.TextAreaFor(m => m.Description, new { @id = "MainText", @class = "form-control new-textarea", @rows = "12",@style="min-height:300px" })
            </div>
            <div class="form-group col-lg-4 col-md-4 col-sm-6">
                    <label for="Tags">Select tags:</label>
                    @Html.ListBoxFor(m => m.TagsId, new SelectList(ViewBag.Tags,"Id","Name"), new { @id = "Tags", @class = "form-control", @aria_describedby = "TagsHelp",@rows="2" })
                    <small id="TagsHelp" class="text-muted">Hold ctrl or shift (or drag with the mouse) to select more than one.</small>
            </div>
            <div class="form-group col-lg-4 col-md-4 col-sm-6">
                        <label for="Categ">Select category:</label>
                        @Html.DropDownListFor(m => m.CategoryId,new SelectList(ViewBag.Category,"Id","Name"), new { @id = "Categ", @class = "form-control" })
             </div>
            <div class="col-lg-4 col-md-4 col-sm-5">
                <input type="submit" value="Send" class="btn btn-block btn-success"/>
                
            </div>

         </div>

        
            
    </div>

}


