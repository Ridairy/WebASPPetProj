@model WebASPPetProj.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    @using (Html.BeginForm())
    {
    <div class="container">
        @Html.AntiForgeryToken()
        <div class="input-group input-group-sm buffer-btn">
            <span class="input-group-addon info" id="UserName">User name: </span>
            @Html.TextBoxFor((u=>u.UserName), new { @class = "form-control", placeholder = "User name is....", aria_describedby = "UserName", value = @Model.UserName, @readonly="true" })
        </div>

        <div class="input-group input-group-sm buffer-btn">
            <span class="input-group-addon info" id="Email">Email: </span>
            @Html.TextBoxFor((u => u.Email), new { @class = "form-control", placeholder = "Email is....", aria_describedby = "Email", value = @Model.Email, @readonly = "true" })


        </div>

        <div class="input-group input-group-sm buffer-btn">
            <span class="input-group-addon info" id="Password">Password: </span>
            @if (Model.HasPassword)
            {
                <input class="btn input-group-addon info" type="submit" formaction="Manage/ChangePassword" value="Change" />
            }
            else
            {
                <input class="btn input-group-addon info" type="submit" formaction="Manage/SetPassword" value="Create" />
            }
        </div>

        <hr />

        <div class="input-group input-group-sm buffer-btn">
            <span class="input-group-addon info" id="UserRName">Real name: </span>
            @Html.TextBoxFor((u => u.RealName), new { @class = "form-control", placeholder = "Real name is....", aria_describedby = "UserRName", value = @Model.RealName })
            <input class="btn input-group-addon info" type="submit" value="Change" />
        </div>
    </div>

    
    }
</div>
   
